			forecolor			1 1 1 1
			decoration
			visible			0
		}

		itemDef 
		{
			name				save
			group				main
			rect				25 110 40 20	
			type				ITEM_TYPE_BUTTON
			text				"Save"
			descText			"Save edits to your character"
			textalign			ITEM_ALIGN_LEFT
			textalignx			4
			textaligny			-2    
			font				2
			textscale			0.8
			forecolor			1 .682 0 1
			visible			1
			action
			{
				play "sound/interface/button1.wav"
				uiscript "editCharacter"
				close "ingame_OpenRP"
			}
			mouseenter 
			{ 
				show			character_button
			}
			mouseexit 
			{ 
				hide			character_button
			}
		}

